<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fixed TextView at the top -->
    <TextView
        android:id="@+id/stressLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:background="#CCCCCC"
        android:text="Stress Level: Moderate"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Scrollable content below the TextView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stressLevel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.firstsensorcomputing.GraphView
                android:id="@+id/graph1"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.example.firstsensorcomputing.GraphView
                android:id="@+id/graph2"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.example.firstsensorcomputing.GraphView
                android:id="@+id/graph3"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.example.firstsensorcomputing.GraphView
                android:id="@+id/graph4"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.example.firstsensorcomputing.GraphView
                android:id="@+id/graph5"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.example.firstsensorcomputing.GraphView
                android:id="@+id/graph6"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
